# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
# Using Docker: Use these exact values (matches docker-compose.yml)
DATABASE_URL="postgresql://hangout_user:hangout_password@localhost:5432/hangout_planner?schema=public"

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging Configuration
LOG_LEVEL=info

# JWT Configuration
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d